@page "/userauth"
@layout EmptyLayout

<div class="text-white px-4 h-100 d-flex flex-column flex-md-row justify-content-start justify-content-md-between gap-3 align-items-center login-form" style="">
    <img src="/logo-3w.png" />
    <div class="bg-black d-flex justify-content-center" style="border-radius: 15px; min-width: 420px">
        <div class="d-flex flex-column col-9 col-md-10 col-lg-10 gap-2 my-5">
            <div class="d-flex flex-column align-items-center">
                <h4>Sign In</h4>
                <RadzenLabel Style="color: gray">Your Social Campaigns</RadzenLabel>
            </div>
            <div class="d-flex mt-3 justify-content-center justify-content-md-between gap-2" style="height: 2.6em">
                <div class="d-flex onhover-opacity-90 px-3 gap-2 align-items-center justify-content-center h-100" style="border: 0.1px solid gray; background-color: rgba(255,255,255,0.1); border-radius: 5px;">
                    <Icon Name="IconName.Google" Style="font-size: 1.2em;"></Icon>
                    Sign in with Google
                </div>
                <div class="d-flex onhover-opacity-90 px-3 gap-2 align-items-center justify-content-center h-100" style="border: 0.1px solid gray; background-color: rgba(255,255,255,0.1); border-radius: 5px;">
                    <Icon Name="IconName.Apple" Style="font-size: 1.35em"></Icon>
                    Sign in with Apple
                </div>
            </div>

            <div class="d-flex align-items-center justify-content-center gap-2 my-2" style="color: gray !important">
                <hr class="col-4" style=""/>
                Or with Email
                <hr class="col-4" />
            </div>
            <div class="d-flex flex-column justify-content-center align-items-center">
                <RadzenFormField Text="Email" class="text-secondary w-100">
                    <RadzenTextBox Style="height: 2.2em; background-color: rgba(0,0,0,0.9)"></RadzenTextBox>
                </RadzenFormField>
                <RadzenFormField Text="Password" class="text-secondary w-100">
                    <RadzenTextBox Style="height: 2.2em; background-color: rgba(0,0,0,0.9)"></RadzenTextBox>
                </RadzenFormField>
                <label class="text-end w-100 pt-2"><a class="onhover-opacity-90 text-decoration-none" style="color: cornflowerblue;">Forgot Password?</a></label>
            </div>
            <a class="py-2 mt-3 mb-2 d-flex justify-content-center onhover-opacity-90" style="background-color: cornflowerblue; color: black; text-decoration:none; border-radius:5px">Sign In</a>
            <div class="d-flex gap-2 justify-content-center">
                <label style="color: silver">Not a Member yet? </label>
                <label style="color: cornflowerblue">Sign Up</label>
            </div>
        </div>
    </div>
</div>
