<div class="p-2 flex-grow-0" style="background: linear-gradient(to top, azure, white); border: 1px solid gray; background-color: white; border-radius: 10px">
    <strong>Financial Performance</strong>
    <RadzenArcGauge Style="width: 100%;height: 250px;">
        <RadzenArcGaugeScale Step="10" Min="0" Max="100" MinorStep="2" Radius="1.5" TickPosition=GaugeTickPosition.Outside Fill="black" ShowTickLabels="false" Stroke="black" Y="0.9" Margin="0">
            <RadzenArcGaugeScaleValue Value=@value ShowValue=true>
                <Template Context="pointer">
                    <h5>
                        @pointer.Value <sup>%</sup>
                    </h5>
                </Template>
            </RadzenArcGaugeScaleValue>
        </RadzenArcGaugeScale>
    </RadzenArcGauge>
</div>

@code {
    double value = 80;
}