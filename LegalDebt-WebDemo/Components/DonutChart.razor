
<RadzenChart class="text-dark">
    <RadzenDonutSeries Data="@revenue" CategoryProperty="Quarter" ValueProperty="Revenue">
        <ChildContent>
            <RadzenSeriesDataLabels Visible="@showDataLabels" />
        </ChildContent>
        <TitleTemplate>
            <div class="rz-donut-content">
                <div>Revenue</div>
                <div>for 2020</div>
            </div>
        </TitleTemplate>
    </RadzenDonutSeries>
</RadzenChart>

@code {
    bool showDataLabels = false;

    class DataItem
    {
        public string Quarter { get; set; }
        public double Revenue { get; set; }
    }

    DataItem[] revenue = new DataItem[] {
    new DataItem
    {
    Quarter = "Severe Debt",
    Revenue = 30000
    },
    new DataItem
    {
    Quarter = "Significant Debt",
    Revenue = 40000
    },
    new DataItem
    {
    Quarter = "Moderate Debt",
    Revenue = 50000
    },
    new DataItem
    {
    Quarter = "Partial Payment",
    Revenue = 80000
    },    new DataItem
    {
    Quarter = "No Outstanding Debt",
    Revenue = 80000
    },
    };
}